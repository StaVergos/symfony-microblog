{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
            {% for posts in posts %}
            <div class="col-md-8">
                <div class="p-4 border bg-light">
                    <article class="blog-post">
                        <h2 class="blog-post-title">{{ posts.title }}</h2>
                        <p>{{ posts.text }}</p>
                    </article>
                </div>
            </div>
            {% endfor %}
</div>
{% endblock %}